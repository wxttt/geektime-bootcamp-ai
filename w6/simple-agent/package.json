{
  "name": "simple-agent",
  "version": "1.0.0",
  "description": "A simple multi-turn agent SDK with tool calling support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "typecheck": "tsc --noEmit",
    "example:basic": "tsx examples/basic.ts",
    "example:tools": "tsx examples/custom-tools.ts",
    "example:mcp": "tsx examples/mcp-integration.ts",
    "example:streaming": "tsx examples/streaming.ts"
  },
  "keywords": ["agent", "ai", "openai", "tools", "mcp"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "openai": "^6.15.0",
    "zod": "^4.3.5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
