---
import PageLayout from "../../layouts/PageLayout.astro";
import PageHeader from "../../components/ui/PageHeader";
import ScrollReveal from "../../components/ui/ScrollReveal";
import { Play, Image, Calendar } from "lucide-react";
import { getUrl } from "../../utils/url";
import "../../styles/presentations.css";

const presentations = [
  {
    title: "AI 编程训练营介绍",
    description: "陈天 AI 编程训练营课程介绍与概览，了解课程框架与学习路径",
    href: getUrl("presentations/intro"),
    thumbnail: getUrl("slides/intro/intro-1.jpg"),
    slideCount: 4,
    date: "2025-12-02",
    category: "课程介绍",
  },
  {
    title: "Werner Vogels - The Renaissance Developer",
    description: "AWS re:Invent 2024 Keynote - 探讨 AI 时代开发者应具备的五大特质",
    href: getUrl("presentations/vogels-keynote"),
    thumbnail: getUrl("slides/vogels-keynote/00-3.jpg"),
    slideCount: 32,
    date: "2025-12-07",
    category: "技术分享",
  },
  {
    title: "AI 时代的文艺复兴开发者",
    description: "Werner Vogels re:Invent 2024 主题演讲解读 - NotebookLM 生成的中文图解版",
    href: getUrl("presentations/vogels-keynote-nblm"),
    thumbnail: getUrl("slides/vogels-keynote-nblm/001.jpg"),
    slideCount: 14,
    date: "2025-12-07",
    category: "行业洞察",
  },
  {
    title: "训练营 Q&A 第一期",
    description: "AI 编程训练营第一期问答环节，解答学员常见问题",
    href: getUrl("presentations/qa-1"),
    thumbnail: getUrl("slides/qa-1/001.jpg"),
    slideCount: 16,
    date: "2025-12-14",
    category: "Q&A 答疑",
  },
  {
    title: "AI Agent 驱动的云网络革命",
    description: "探索 AWS Cloud WAN MCP 服务器如何利用 AI 智能体将复杂的云网络运营化为有序之美",
    href: getUrl("presentations/mcp-use-case"),
    thumbnail: getUrl("slides/mcp-use-case/001.jpg"),
    slideCount: 18,
    date: "2025-12-20",
    category: "技术分享",
  },
  {
    title: "别再构建智能体了，我们来构建技能吧",
    description: "一种全新的范式，将智能体的通用能力转化为可组合、可分享的专业知识",
    href: getUrl("presentations/skills"),
    thumbnail: getUrl("slides/skills/001.jpg"),
    slideCount: 18,
    date: "2025-12-20",
    category: "技术分享",
  },
  {
    title: "AI 编程：从码农到筑梦师的航海图",
    description: "训练营 Q&A 第二期 - 一场从代码到架构的范式转移，探讨 AI 时代编程的新范式",
    href: getUrl("presentations/qa-2"),
    thumbnail: getUrl("slides/qa-2/001.jpg"),
    slideCount: 20,
    date: "2026-01-04",
    category: "Q&A 答疑",
  },
  {
    title: "AI 编程新范式",
    description: "AI 编程训练营 8 周课程回顾 - 从工具入门到 Agentic 开发的完整学习之旅",
    href: getUrl("presentations/review"),
    thumbnail: getUrl("slides/review/00.jpg"),
    slideCount: 19,
    date: "2026-01-25",
    category: "学习总结",
  },
];
---

<PageLayout
  title="演示文稿 - 陈天 AI 训练营"
  description="课程演示文稿、技术分享幻灯片"
>
  <PageHeader
    title="演示文稿"
    subtitle="课程讲义与技术分享"
    client:load
  >
    <a href="#presentations" class="md-btn">浏览演示文稿</a>
    <a href={getUrl("curriculum")} class="md-btn md-btn-secondary">返回课程</a>
  </PageHeader>

  <section
    id="presentations"
    class="md-section"
    style="background-color: var(--md-cream); padding-top: var(--space-12); padding-bottom: var(--space-12);"
  >
    <div class="md-container">
      <ScrollReveal client:load>
        <div class="mb-12 text-center">
          <h2 class="mb-6 font-bold text-h2 text-ink">课程演示文稿</h2>
          <p
            class="mx-auto max-w-2xl text-body text-slate"
            style="line-height: 1.6;"
          >
            点击任意演示文稿开始浏览，支持全屏播放、键盘导航
          </p>
        </div>
      </ScrollReveal>

      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {
          presentations.map((pres, idx) => (
            <ScrollReveal delay={idx * 0.1} client:load>
              <a href={pres.href} class="presentation-card">
                <div class="presentation-card-image">
                  <img
                    src={pres.thumbnail}
                    alt={pres.title}
                    loading="lazy"
                    onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22400%22 height=%22225%22%3E%3Crect fill=%22%23383838%22 width=%22400%22 height=%22225%22/%3E%3Ctext x=%22200%22 y=%22112%22 fill=%22%23FFDE00%22 font-size=%2220%22 text-anchor=%22middle%22 dominant-baseline=%22middle%22%3E演示文稿%3C/text%3E%3C/svg%3E'"
                  />
                  <div class="presentation-card-overlay">
                    <div class="play-icon">
                      <Play size={28} fill="currentColor" />
                    </div>
                  </div>
                </div>
                <div class="presentation-card-content">
                  <h3 class="presentation-card-title">{pres.title}</h3>
                  <p class="presentation-card-description">{pres.description}</p>
                  <div class="presentation-card-meta">
                    <div class="presentation-card-slides">
                      <Image size={16} />
                      <span>{pres.slideCount} 张幻灯片</span>
                    </div>
                    <div class="presentation-card-date">
                      <span>{pres.date}</span>
                    </div>
                  </div>
                </div>
              </a>
            </ScrollReveal>
          ))
        }
      </div>
    </div>
  </section>

  <section
    class="md-section"
    style="background-color: var(--md-sky); padding-top: var(--space-12); padding-bottom: var(--space-12);"
  >
    <div class="text-center md-container">
      <ScrollReveal client:load>
        <h2 class="mb-10 font-bold text-h2 text-graphite">想要学习更多？</h2>
        <p
          class="mx-auto mb-10 max-w-2xl text-h3 text-body text-graphite"
          style="line-height: 1.5;"
        >
          演示文稿配合课程学习效果更佳
        </p>
        <div class="justify-center md-cta-stack">
          <a href={getUrl("curriculum")} class="md-btn">开始学习课程</a>
          <a href={getUrl("materials")} class="md-btn md-btn-secondary">
            查看学习资料
          </a>
        </div>
      </ScrollReveal>
    </div>
  </section>
</PageLayout>
